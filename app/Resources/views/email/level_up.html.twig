{% extends ':email:layout.html.twig' %}

{% set levelDefinition = constant('\\AppBundle\\Service\\LevelChecker::LEVEL_DEFINITION') %}

{% block title %}
    <h1 style="text-align: center; color: #FFF; font-weight: 400;font-family: Arial Black, Arial, sans-serif">BRAVO !</h1>
{% endblock %}

{% block subtitle %}
    <h2 style="text-align: center; color: #008F8A; font-weight: 300; margin: 0; font-size: 20px;font-family: Verdana, Arial, sans-serif">TOUTE L’EQUIPE FOOD&YOU VOUS REMERCIE</h2>
{% endblock %}

{% block content %}
    <table width="100%" bgcolor="#ffffff" cellpadding="0" cellspacing="0" border="0">
        <tbody>
        <tr>
            <td>
                <div class="innerbg">
                </div>
                <table width="650" cellpadding="0" cellspacing="0" border="0" align="center" class="devicewidth">
                    <tbody>
                    <tr>
                        <td width="100%">
                            <table width="650" align="center" cellspacing="0" cellpadding="0" border="0" class="devicewidth">
                                <tbody>
                                <tr>
                                    <td align="left" style="padding: 30px 0; color: #000">
                                        <div style="font-size: 16px; font-family: Helvetica, Arial, sans-serif; line-height: 1.5;">
                                            <p style="padding-top: 20px">
                                                Toute l’équipe vous remercie de votre fidélité ! Votre niveau en cuisine s’améliore à chaque participation, bravo !
                                            </p>
                                            <p style="padding-top: 20px">
                                                Nous sommes donc ravis de vous annoncer que, grâce à vos <span style="color: #008F8A">{{ levelDefinition[member.level].participations }} participations</span> et à votre <span style="color: #008F8A">moyenne de {{ levelDefinition[member.level].rating }}/5</span> vous atteignez le statut de:
                                            </p>
                                            <p style="text-align: center">
                                                <img src="{{ base_url ~ asset('images/email/status' ~ member.level ~'.png') }}" align="center">
                                            </p>
                                        </div>
                                    </td>
                                </tr>
                                <tr>
                                    <td style="text-align: center;padding: 20px 0;font-weight: 400;font-family: Arial Black, Arial, sans-serif; font-size: 16px">
                                        {% for level in 0..5 %}
                                            <span{% if member.level == level %} style="color: #F26A5B; font-size: 20px"{% endif %}>
                                                {{ ('member.level.'~level) | trans({}, 'member_profile') | upper  }}
                                            </span>
                                            {% if not loop.last %}
                                                <span style="color: #008F8A">&gt;</span>
                                            {% endif %}
                                        {% endfor %}
                                    </td>
                                </tr>
                                </tbody>
                            </table>
                        </td>
                    </tr>
                    </tbody>
                </table>
            </td>
        </tr>
        </tbody>
    </table>
    <table width="100%" bgcolor="#008F8A" cellpadding="0" cellspacing="0" border="0" style="margin-bottom: 50px">
        <tbody>
        <tr>
            <td>
                <div class="innerbg">
                </div>
                <table width="650" cellpadding="0" cellspacing="0" border="0" align="center" class="devicewidth">
                    <tbody>
                    <tr>
                        <td width="100%">
                            <table width="650" align="center" cellspacing="0" cellpadding="0" border="0"
                                   class="devicewidth">
                                <tbody>
                                <tr>
                                    <td bgcolor="#008F8A" style="padding: 30px;color: #FFF;">
                                        <h2 style="text-align: center; font-weight: 300; font-size: 20px;font-family: Verdana, Arial, sans-serif">RENOUVELEZ DES MAINTENANT L’EXPERIENCE</h2>
                                        <p style="text-align: center">Participez à de nouveaux évènements Food&You et tentez de gagner</p>
                                        <h1 style="text-align: center; margin-bottom: 0; font-weight: 400;font-family: Arial Black, Arial, sans-serif">10.000&euro;</h1>
                                    </td>
                                </tr>
                                </tbody>
                            </table>
                        </td>
                    </tr>
                    </tbody>
                </table>
            </td>
        </tr>
        </tbody>
    </table>
{% endblock %}
