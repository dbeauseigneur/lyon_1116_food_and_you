{% extends ':email:layout.html.twig' %}

{% block title %}
{% endblock %}

{% block subtitle %}
    <h2 style="text-align: center; color: #008F8A; font-weight: 300; margin: 0; font-size: 20px;font-family: Verdana, Arial, sans-serif">
        Événement pas assez rempli !
    </h2>
{% endblock %}

{% block content %}
    <table width="100%" bgcolor="#ffffff" cellpadding="0" cellspacing="0" border="0">
        <tbody>
        <tr>
            <td>
                <div class="innerbg">
                </div>
                <table width="650" cellpadding="0" cellspacing="0" border="0" align="center" class="devicewidth">
                    <tbody>
                    <tr>
                        <td width="100%">
                            <table width="650" align="center" cellspacing="0" cellpadding="0" border="0"
                                   class="devicewidth">
                                <tbody>
                                <tr>
                                    <td align="left" style="padding: 30px 0; color: #000">
                                        <div style="font-size: 16px; font-family: Helvetica, Arial, sans-serif; line-height: 1.5;">
                                            Attention votre événement n'a pas encore atteint la capacité minimum
                                            enregistrée par le restaurateur :
                                        </div>
                                        <p>{{ event.restaurant.name }}</p>
                                        <p>{{ event.startDate|date('d') }} {{ event.startDate|date('M')|trans({}, 'messages') }} {{ event.startDate|date('Y') }}</p>
                                        <p>Réservations déjà effectuées : {{ event.confirmedReservations }}</p>
                                    </td>
                                </tr>
                                </tbody>
                            </table>
                        </td>
                    </tr>
                    </tbody>
                </table>
            </td>
        </tr>
        </tbody>
    </table>
{% endblock %}
