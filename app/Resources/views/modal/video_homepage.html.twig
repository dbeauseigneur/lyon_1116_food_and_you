<modal-block>
    <content>
        <iframe src="//player.vimeo.com/video/154123180" width="100%" height="315" frameborder="0" webkitallowfullscreen mozallowfullscreen allowfullscreen></iframe>
    </content>
    <script type="text/modal-template" language="JavaScript">
        modal.content().find('.close').on('click', function () {
            var link = $(this).data('link');
            if (link != undefined) {
                window.location.assign(link);
            } else {
                modal.hide();
            }
        });
    </script>
</modal-block>
