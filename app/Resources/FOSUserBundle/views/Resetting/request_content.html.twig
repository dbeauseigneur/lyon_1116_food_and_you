{% trans_default_domain 'FOSUserBundle' %}


<form action="{{ path('fos_user_resetting_send_email') }}" method="POST" id="resetting_request_form" class="fos_user_resetting_request">
    <h3 class="h3">{{ 'resetting.request.title'|trans }}</h3>

    {% if invalid_username is defined %}
        <p>{{ 'resetting.request.invalid_username'|trans({'%username%': invalid_username}) }}</p>
    {% endif %}

    <div class="form-group box">
        <input type="email" id="username" name="username" required="required" placeholder="{{ 'resetting.request.username'|trans }}" class="form-control" />
        <div class="has-error">
            <p class="help-block global-errors"></p>
        </div>
    </div>
    <div class="form-group text-center">
        <input type="submit" class="Btn green-dark2 sm round-corners" name="_submit" value="{{ 'resetting.request.submit'|trans }}" />
    </div>
</form>

<script type="text/javascript">
    var resettingRequestForm = $('#resetting_request_form');
    resettingRequestForm.find('#username').on('keyup', function() {
        resettingRequestForm.find('.global-errors').text('');
    });
</script>
